                            <h6 class="mb-0">
                                <i class="fas fa-qrcode me-2"></i>Scan Student QR Code
                            </h6>
                        </div>
                        <div class="mt-2">
                            <div class="d-flex flex-wrap gap-1">
                                <span class="badge bg-primary">@DateTime.Now.ToString("HH:mm:ss")</span>
                                <span class="badge bg-info">@DateTime.Now.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Select Time In or Time Out above, then scan QR code | 7:30-12:00 = Half Day | 12:00-4:30 = Half Day | 7:30-4:30 = Whole Day | Late after 7:31 AM
                                </small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column py-2">
                        <!-- QR Scanner Component -->
                        <div class="scanner-container flex-grow-1 bg-light rounded mb-3 d-flex align-items-center justify-content-center" style="min-height: 250px;">
                            @if (string.IsNullOrEmpty(attendanceType))
                            {
                                <div class="text-center">
                                    <!-- QR Code Icon -->
                                    <div class="mb-4">
                                        <i class="fas fa-hand-pointer fa-4x text-warning"></i>
                                    </div>
                                    
                                    <!-- Title -->
                                    <h5 class="mb-3 text-dark">Select Attendance Type First</h5>
                                    
                                    <!-- Description -->
                                    <p class="mb-4 text-muted">Please select Time In or Time Out above to start scanning</p>
                                </div>
                            }
                            else if (isScanning)
                            {
                                <div class="text-center">
                                    <!-- Scanning Animation -->
                                    <div class="mb-4">
                                        <div class="scanner-animation">
                                            <i class="fas fa-qrcode fa-4x text-success"></i>
                                            <div class="scanning-line"></div>
                                        </div>
                                    </div>
                                    
                                    <!-- Scanning Status -->
                                    <h5 class="mb-3 text-success">Scanning for @(attendanceType == "TimeIn" ? "Time In" : "Time Out")...</h5>
                                    
                                    <!-- Description -->
                                    <p class="mb-4 text-muted">Point camera at student QR code</p>
                                    
                                    <!-- Current Time Info -->
                                    <div class="alert alert-info py-2 mb-3">
                                        <small>
                                            <i class="fas fa-info-circle me-1"></i>
                                            <strong>Current Time:</strong> @DateTime.Now.ToString("HH:mm:ss")<br/>
                                            <strong>Date:</strong> @DateTime.Now.ToString("MMM dd, yyyy")<br/>
                                            <strong>Mode:</strong> @(attendanceType == "TimeIn" ? "Time In" : "Time Out")
                                        </small>
                                    </div>
                                    
