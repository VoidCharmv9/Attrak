                        <i class="fas fa-clock me-2"></i>Select Attendance Type
                    </h6>
                </div>
                <div class="card-body py-3">
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <button class="btn @(attendanceType == "TimeIn" ? "btn-primary" : "btn-outline-primary") w-100" 
                                    @onclick="@(() => SetAttendanceType("TimeIn"))">
                                <i class="fas fa-sign-in-alt me-2"></i>Time In
                            </button>
                        </div>
                        <div class="col-md-6 mb-2">
                            <button class="btn @(attendanceType == "TimeOut" ? "btn-warning" : "btn-outline-warning") w-100" 
                                    @onclick="@(() => SetAttendanceType("TimeOut"))">
                                <i class="fas fa-sign-out-alt me-2"></i>Time Out
                            </button>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(attendanceType))
                    {
                        <div class="alert alert-success py-2 mt-2">
                            <small>
                                <i class="fas fa-check-circle me-1"></i>
                                <strong>Selected:</strong> @(attendanceType == "TimeIn" ? "Time In" : "Time Out")
                                <span class="badge bg-primary ms-2">@DateTime.Now.ToString("HH:mm:ss")</span>
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Scanner Section -->
        <div class="row p-2 flex-grow-1">
