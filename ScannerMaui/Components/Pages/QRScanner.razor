            "TimeIn" => "Time In",
            "TimeOut" => "Time Out",
            _ => "Attendance"
        };
        
        var remarksText = !string.IsNullOrEmpty(result.Remarks) ? $" ({result.Remarks})" : "";
        
        return $"{typeText} marked: {result.StudentName}{remarksText}";
    }


